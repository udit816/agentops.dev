# Server Configuration
PORT=3000
FRONTEND_URL=http://localhost:3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agentops
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_MAX_CONNECTIONS=20

# Authentication
API_KEY_SECRET=your_secret_key_here_min_32_chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000

# Payload Limits
MAX_PAYLOAD_SIZE_KB=100

# Signal Detection Thresholds
RETRY_THRESHOLD=3
LOOP_THRESHOLD=3
LATENCY_SPIKE_MS=5000
HIGH_COST_THRESHOLD_USD=0.30
INCOMPLETE_RUN_TIMEOUT_MS=3600000

# LLM Integration (for explanation engine)
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.3
USE_LLM_POLISHING=false
